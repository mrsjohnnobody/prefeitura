<!DOCTYPE html>
<html lang="pt-br">
<%- include("../global/head", {pageCss: 'licitacoes'}); %>

  <body>
    <%- include("../../partialViews/header"); %>
      <%- include("../../partialViews/navbar", { activeNavItem: "Transparencia-Licitacoes" }); %>

        <div class="px-5">
          <div class="row mx-5 mb-3 pt-0 mt-4 shadow-sm" style="background-color: #ebebeb; border-radius: 8px">
            <!-- FILTROS -->
            <div class="container-fluid">
              <div class="row mx-0">
                <div class="col-12 p-5 d-flex justify-content-end">
                  <div class="input-group">
                    <input type="text" class="form-control" placeholder="Pesquisar" aria-label="Pesquisar"
                      aria-describedby="button-addon2">

                    <button class="btn btn-outline-primary" type="button" id="button-addon2">
                      <img class="search" src="/img/search.svg" alt="" style="height:23px">
                    </button>
                  </div>
                </div>
              </div>
            </div>

            <!--TABLE-->
            <div class="container-fluid">
              <div class="card m-5 mt-0 d-flex justify-content" style="border-style: solid; border-color: var(--secondary-color)">
                <div class="card-header" style="background-color: var(--secondary-color); color: white">
                  <div class="row">
                    <div class="col-12">
                      <h3>Licitações</h3>
                    </div>
                  </div>
                </div>
                <div class="card-body">
                  <table id="licitacaoTable" class="table table-bordered table-striped">
                    <thead class="table" style="background-color:var(--secondary-color); color: white">
                        <tr>
                        <th class="col-1 text-nowrap" scope="col">Número do Processo</th>
                        <th class="col-1" scope="col">Modalidade</th>
                        <th class="col-6" scope="col">Objeto</th>
                        <th class="col-1 text-nowrap" scope="col">Data de Abertura</th>
                        <th class="col-1" scope="col">Situação</th>
                        <th class="col-2" scope="col">Ações</th>
                        </tr>
                    </thead>
                    <tbody style="color:var(--secondary-color) color">
                        <% for(var i=0; i < licitacoes.length; i++) {%>
                            <tr id="leiIdItem_<%=licitacoes[i].id %>">
                                <th scope="row"><%=licitacoes[i].ProcessNumber%></th>
                                <th scope="row"><%=licitacoes[i].Modality%></th>
                                <th scope="row"><%=licitacoes[i].Objective%></th>
                                <th scope="row">
                                    <%= licitacoes[i].OpeningDate ? new Date(licitacoes[i].OpeningDate).toLocaleDateString('pt-BR', { timeZone: 'UTC' }) : null %>
                                </th>
                                <th scope="row"><%=licitacoes[i].Situation%></th>
                                <th scope="row">
                                    <a href="/user/licitacao/<%=licitacoes[i].id%>" style="text-decoration: none;">
                                        <img title="Ver Licitação" src="/icons/eye-fill.svg" alt="Ver Licitação" height="20rem">
                                    </a>
                                </th>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
                </div>
              </div>
            </div>
          </div>
        </div>



        <%- include("../../partialViews/footer"); %>
    <script src="/script/user/global/global.js"></script>

  </body>

</html>