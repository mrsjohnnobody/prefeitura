<!DOCTYPE html>
<html lang="pt-br">
   <%- include("../global/head", {pageCss: 'home'}); %>

  <body>
    <%- include("../../partialViews/header"); %>
    <%- include("../../partialViews/navbar", {activeNavItem: 'Inicio'}); %>

    <!--carousel-->
    <% if(latestnews.length == 3){ %>
    <div class="container-fluid">
      <div class="row px-5">
        <div class="col-8 p-5 px-0">
          <div id="carouselExampleDark" class="carousel carousel-dark slide p-5 ps-0" data-bs-ride="carousel">
            <h5 class="text-center fw-bold">ÚLTIMAS NOTÍCIAS</h5>
            <div class="carousel-indicators">
              <button type="button" data-bs-target="#carouselExampleDark" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
              <button type="button" data-bs-target="#carouselExampleDark" data-bs-slide-to="1" aria-label="Slide 2"></button>
              <button type="button" data-bs-target="#carouselExampleDark" data-bs-slide-to="2" aria-label="Slide 3"></button>
            </div>
            <div class="carousel-inner fw-bold">
              <div class="carousel-item active" data-bs-interval="10000">
                <img src="/<%= latestnews[0].image %>" class="d-block w-100" alt="Notícia">
                <div class="texto carousel-caption d-none d-md-block">
                  <h5 style="font-size: 2em;"><%= latestnews[0].title %></h5>
                </div>
              </div>
              <div class="carousel-item" data-bs-interval="2000">
                <img src="/<%= latestnews[1].image %>" class="d-block w-100" alt="Notícia">
                <div class="texto carousel-caption d-none d-md-block">
                  <h5 style="font-size: 2em;"><%= latestnews[1].title %></h5>
                </div>
              </div>
              <div class="carousel-item">
                <img src="/<%= latestnews[2].image %>" class="d-block w-100" alt="Notícia">
                <div class="texto carousel-caption d-none d-md-block">
                  <h5 style="font-size: 2em;"><%= latestnews[2].title %></h5>
                </div>
              </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleDark" data-bs-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Anterior</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleDark" data-bs-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Próximo</span>
            </button>
          </div>
        </div>

        <div class="col-4 d-flex justify-content-center pt-5 pe-0">
          <div class="pt-5">
            <h5 class="text-center fw-bold">ÚLTIMAS SESSÕES</h5>
            
            <div class="list-group d-flex justify-content-center align-items-center shadow bg-body rounded" style="width: 25vw;">
              <% for(var i=0; i < sessoes.length; i++) {%>
              <a
                href="/sessao/<%=sessoes[i].id %>"
                class="list-group-item list-group-item-action ultimasSessoesItem"
                aria-current="true"
              >
                <div class="d-flex w-100 justify-content-between">
                  <h5 class="mb-1">Sessão <%= sessoes[i].Tipo %></h5>
                </div>
                <small class="mb-1">
                  <%=new Date(sessoes[i].Data).toLocaleDateString('pt-BR', {
                  timeZone: 'UTC' }) %>
                  - <%= sessoes[i].Situacao %>
                </small>
              </a>
              <% }%>
            </div>
            <div class="d-flex justify-content-center mt-3">
              <a class="btn btn-primary" href="/sessoes">Ver todas as sessões</a>
            </div>
          </div>
        </div>
        </div>
      </div>
    </div>
    <% } %>

    <!--videos-->
    <div class="container-fluid">
      <div class="containerItem row mt-4 m-3 p-3 justify-content-center ">
        <h3 class="d-flex justify-content-center mb-4">Últimos vídeos</h3>
        <% for(var i=0; i < videos.length; i++) {%>
          <div class="col-3">
            <div class="videoItem card">
              <a class="videosCard" href="https://www.youtube.com/watch?v=<%=videos[i].id.videoId%>" target="_blank">
                <img src="<%=videos[i].snippet.thumbnails.medium.url%>" class="card-img-top" alt="...">
                <div class="card-body">
                  <h5 class="card-title fw-bold"><%=videos[i].snippet.title%></h5>
                </div>
              </a>
            </div>
          </div>
        <% } %>
        <div class="d-flex justify-content-center mt-3">
          <a class="btn btn-primary" href="/videos">Ver todos os vídeos</a>
        </div>
      </div>
    </div>

    <!--sessão pdf-->
    <div id="cardGroupHome" class="card-group p-5">
        
      <!-- Lei de Resp. Fiscal  -->
      <div class="card d-flex justi">
        <div class="card-body">
          <h5 class="card-title">Lei de Resp. Fiscal</h5>
          <div class="homeDocumentosDivisor my-2"></div>
          
            <% for(var i=0; i < gestoesFiscais.length; i++) {%>
                <div class="mb-2">
                    <a
                    href="/<%=gestoesFiscais[i].path%>"
                    >
                        <img src="/icons/filetype-pdf.svg" alt="" />
                        <%=gestoesFiscais[i].nome%>
                    </a>
                    <br />
                </div>
            <% } %>
        </div>
      </div>

      <!-- Licitações -->
      <div class="card d-flex justi">
        <div class="card-body">
          <h5 class="card-title">Licitações</h5>
          <div class="homeDocumentosDivisor my-2"></div>
          
            <% for(var i=0; i < licitacoes.length; i++) {%>
                <div class="mb-2">
                    <a
                    href="/user/licitacao/<%=licitacoes[i].id%>"
                    >
                        <img src="/icons/filetype-pdf.svg" alt="" />
                        <%=licitacoes[i].ProcessNumber%>
                    </a>
                    <br />
                </div>
            <% } %>
        </div>
      </div>

      <!-- Contratos -->
      <div class="card d-flex justi">
        <div class="card-body">
          <h5 class="card-title">Contratos</h5>
          <div class="homeDocumentosDivisor my-2"></div>
          
            <% for(var i=0; i < contratos.length; i++) {%>
                <div class="mb-2">
                    <a
                    href="/<%=contratos[i].path%>"
                    >
                        <img src="/icons/filetype-pdf.svg" alt="" />
                        <%=contratos[i].Numero%>
                    </a>
                    <br />
                </div>
            <% } %>
        </div>
      </div>
      
    </div>

    <%- include("../../partialViews/footer"); %>
  </body>
</html>
